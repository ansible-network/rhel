conn {{ cloud_vpn_name }}
    left={{ cloud_vpn_initiator_private_ip }}
    leftid=@initiator
    right={{ cloud_vpn_responder_public_ip }}
    authby=secret
    aggressive=yes
    leftsubnet=0.0.0.0/0
    rightsubnet=0.0.0.0/0
    auto=start
    mark={{ cloud_vpn_initiator_tunnel_interface_mark }}
    vti-interface={{ cloud_vpn_initiator_tunnel_interface }}
    vti-routing=no
    leftvti={{ cloud_vpn_initiator_tunnel_ip }}/30
    leftupdown=/etc/ipsec.d/{{ cloud_vpn_name }}-routes.sh

conn {{ cloud_vpn_name }}-failover
    left={{ cloud_vpn_initiator_private_ip }}
    leftid=@initiator
    right={{ cloud_vpn_responder_public_ip }}
    authby=secret
    aggressive=yes
    leftsubnet=0.0.0.0/0
    rightsubnet=0.0.0.0/0
    auto=start
    mark={{ cloud_vpn_initiator_tunnel_failover_interface_mark }}
    vti-interface={{ cloud_vpn_initiator_tunnel_failover_interface }}
    vti-routing=no
    leftvti={{ cloud_vpn_initiator_tunnel_failover_ip }}/30
    leftupdown=/etc/ipsec.d/{{ cloud_vpn_name }}-failover-routes.sh
