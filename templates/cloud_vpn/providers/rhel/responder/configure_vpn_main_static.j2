conn {{ cloud_vpn_name }}
    left={{ cloud_vpn_responder_private_ip }}
    leftid={{ cloud_vpn_responder_public_ip }}
    right={{ cloud_vpn_initiator_public_ip }}
    authby=secret
    leftsubnet=0.0.0.0/0
    rightsubnet=0.0.0.0/0
    auto=start
    mark={{ cloud_vpn_responder_tunnel_interface_mark }}
    vti-interface={{ cloud_vpn_responder_tunnel_interface }}
    vti-routing=no
    leftvti={{ cloud_vpn_responder_tunnel_ip }}/30
    leftupdown=/etc/ipsec.d/{{ cloud_vpn_name }}-routes.sh
